---
import DateTime from "./DateTime.astro";
import Tag from "./Tag.astro";

const { post } = Astro.props;
---

<article class="group bg-white dark:bg-stone-900 rounded-2xl border border-stone-200 dark:border-stone-800 p-4 transition-all duration-200 flex flex-col">
  <a href={post.slug} class="text-xl font-semibold text-stone-900 dark:text-stone-100 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors">
    {post.data.title}
  </a>

  <p class="text-stone-600 dark:text-stone-300 mt-3 line-clamp-2 leading-relaxed flex-1">
    {post.data.description}
  </p>

  <div class="flex items-center gap-4 pt-3">
    <span class="text-stone-500 dark:text-stone-400 text-sm whitespace-nowrap flex items-center gap-1.5">
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <DateTime datetime={post.data.publishDate} />
    </span>
    <div class="flex flex-wrap gap-2">
      {post.data.tags.map((tag: string) => <Tag tag={tag} />)}
    </div>
  </div>
</article>
