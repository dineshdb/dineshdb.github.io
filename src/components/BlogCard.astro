---
import RelativeDateTime from "./RalativeDateTime";
import Tag from "./Tag.astro";

const { post } = Astro.props;
---

<div class="post-item">
  <header>
    <a href={`/blog/${post.slug}`} class="no-underline font-semibold text-3xl">
      {post.data.title}
    </a>
    <span class="text-secondary">
      â€” <RelativeDateTime
        datetime={post.data.publishDate}
        client:only="preact"
      />
    </span>
  </header>

  <span>{post.data.tags.map((tag: string) => <Tag tag={tag} />)}</span>
  <p>{post.data.description}</p>
</div>
