---
import DateTime from "./DateTime.astro";

export interface Props {
  datetime: Date;
  size?: "sm" | "md" | "lg";
}

const { datetime, size = "sm" } = Astro.props;

const sizeClasses = {
  sm: "w-3.5 h-3.5",
  md: "w-4 h-4",
  lg: "w-5 h-5",
};
---

<span class="text-stone-500 dark:text-stone-400 text-sm whitespace-nowrap flex items-center gap-1.5">
  <svg class={sizeClasses[size]} fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
  </svg>
  <DateTime datetime={datetime} />
</span>
