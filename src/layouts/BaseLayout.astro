---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  permalink?: string;
  current?: string;
  image?: string;
}
const { title, description, permalink = "/", current, image } = Astro.props;
---

<html lang="en" class="bg-stone-50 dark:bg-stone-950">
  <head>
    <BaseHead
      title={title}
      description={description}
      permalink={permalink}
      image={image}
    />
  </head>
  <body class="bg-stone-50 dark:bg-stone-950 text-stone-900 dark:text-stone-100 min-h-screen font-sans antialiased">
    <div class="flex flex-col min-h-screen">
      <Header current={current} />

      <main class="flex-1 max-w-4xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-8">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
