---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatTimeAgo } from "../utils/relativeTime";

const title = "What I am doing now";
const description = "Now";
const permalink = `/now`;
const updatedOn = "2023-09-16T17:00:00+05:45";
---

