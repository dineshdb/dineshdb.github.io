---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Bio from "../../components/Bio.astro";
import calculateReadingTime from "reading-time";
import { getCollection } from "astro:content";
import { formatTimeAgo } from "../../utils/relativeTime";

export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry, readingTime: calculateReadingTime(entry.body).text },
  }));
}
const { entry, readingTime } = Astro.props;
const { Content } = await entry.render();
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.description}
  permalink={`/blog/${entry.data.slug}`}
  image={entry.data.image}
  current="blog"
>
  <header>
    <h1>{entry.data.title}</h1>
    <h3>{entry.data.description}</h3>
    <h4>{formatTimeAgo(entry.data.publishDate)} ~ {readingTime}</h4>
    <h5>{entry.data.tags.map((tag) => <a href=`/tags/${tag}` class="tag">{`#${tag}`}</a>)}</h5>
    <hr />
  </header>
  <div class="container">
    <article class="content">
      <Content />
    </article>
    <hr />
    <Bio />
  </div>
</BaseLayout>

<style>
  header {
    text-align: center;
  }

  header h1 {
    margin-bottom: 0.7em;
  }

  header p {
    color: var(--text-secondary);
    text-transform: uppercase;
    font-family: var(--font-family-sans);
    font-weight: 600;
  }

  header hr {
    min-width: 100px;
    width: 30%;
  }
  a.tag{
    margin-right: 0.75em;
  }
</style>
