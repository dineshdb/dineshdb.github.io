---
import Bio from "../components/Bio.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "About";
const description = "About me";
const permalink = `/about`;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="about"
>
  <div>
    <div class="prose prose-stone dark:prose-invert max-w-none">
      <div class="bg-white dark:bg-stone-900 rounded-2xl border border-stone-200 dark:border-stone-800 p-8 shadow-sm mb-8">
        <Bio />
      </div>

      <div class="bg-white dark:bg-stone-900 rounded-2xl border border-stone-200 dark:border-stone-800 p-8 shadow-sm">
        <h2 class="text-xl font-semibold text-stone-900 dark:text-stone-100 mb-4">
          Quick Links
        </h2>
        <ul class="space-y-3">
          <li>
            <a
              href="/wish"
              class="text-stone-700 dark:text-stone-300 hover:text-orange-600 dark:hover:text-orange-400 transition-colors flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              My Wishlist
            </a>
          </li>
          <li>
            <a
              href="/now"
              class="text-stone-700 dark:text-stone-300 hover:text-orange-600 dark:hover:text-orange-400 transition-colors flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              My latest updates
            </a>
          </li>
          <li>
            <a
              href="/bucket"
              class="text-stone-700 dark:text-stone-300 hover:text-orange-600 dark:hover:text-orange-400 transition-colors flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
              My bucket list
            </a>
          </li>
        </ul>

        <p class="text-stone-600 dark:text-stone-400 mt-6">
          Keep visiting!
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
